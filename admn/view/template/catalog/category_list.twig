<form id="form-category" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="category">
	<div class="row"> 
		<div class="col-md-12 text-end"> 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ mpage_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_mpage }} </button> | 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ catalog_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_catalog }}</button> | 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ clearance_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_clearance }}</button> | 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ new_arriwals_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_new_arriwals }}</button> | 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ best_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_best }}</button> | 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ gift_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_gift }}</button> | 
      		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ sale_order }}" data-target="#orderModal"><i class="fa fa-sort"></i> {{ text_sale }}</button> 
    	</div>
    </div>
	<div class="table-responsive">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<td class="text-center" style="width: 1px;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));" class="form-check-input"/></td>
					<td class="text-start"><a href="{{ sort_name }}"{% if sort == 'name' %} class="{{ order|lower }}"{% endif %}>{{ column_name }}</a></td>
					<td class="text-end"><a href="{{ sort_sort_order }}"{% if sort == 'sort_order' %} class="{{ order|lower }}"{% endif %}>{{ column_sort_order }}</a></td>
					<td class="text-end">{{ column_action }}</td>
				</tr>
			</thead>
			<tbody>
				{% if categories %}
					{% for category in categories %}
						<tr>
							<td class="text-center"><input type="checkbox" name="selected[]" value="{{ category.category_id }}" class="form-check-input"/></td>
							<td class="text-start">{{ category.name }}</td>
							<td class="text-end">{{ category.sort_order }}</td>
							<td class="text-end"> <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-link="{{ category.order }}" data-target="#orderModal"><i class="fa fa-sort"></i> </button> <a href="{{ category.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a></td>
						</tr>
					{% endfor %}
				{% else %}
					<tr>
						<td class="text-center" colspan="4">{{ text_no_results }}</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>
	<div class="row">
		<div class="col-sm-6 text-start">{{ pagination }}</div>
		<div class="col-sm-6 text-end">{{ results }}</div>
	</div>
</form>

