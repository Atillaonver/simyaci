{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-page').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:600,500,400' rel='stylesheet' type='text/css'>
    
    {{ handy_box }}
    
		<div class="set-size" id="blog">
			<div class="content">
                <div>
                    <div class="page-title">{{ text_blog_dashboard }}</div>
                    <div class="dashboard">
                        <ul>
                            <li><a href="{{ link_add_edit_categories }}" class="icon-category">{{ text_add_edit_categories }}</a></li>
                            <li><a href="{{ link_add_edit_articles }}" class="icon-article">{{ text_add_edit_articles }}</a></li>
                            <li><a href="{{ link_add_edit_authors }}" class="icon-author">{{ text_add_edit_authors }}</a></li>
                            <li><a href="{{ link_add_edit_comments }}" class="icon-comment">{{ text_add_edit_comments }}</a></li>
                            <li><a href="{{ link_general_settings }}" class="icon-settings">{{ text_general_settings }}</a></li>
                        </ul>
                        
                    </div>
                    
                    <div class="alert alert-info"><i class="fa fa-exclamation-circle"></i> {{ text_blog_front_information }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                </div>
            </div>
        </div>
</div>

{{ footer }}