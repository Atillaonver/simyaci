{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-campaign" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
    <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form id="form-campaign" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <input type="hidden" name="campaign_id" value="{{ campaign_id }}" id="campaignId"/>
          <input type="hidden" name="out_type" value="{{ out_type }}" />
          
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
            {% if campaign_id %}
            <li class="nav-item"><a href="#tab-history" data-bs-toggle="tab" class="nav-link">{{ tab_history }}</a></li>
            {% endif %}
          </ul>
          
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
            	<div class="row mb-3 required">
                      <label for="input-name" class="col-sm-2 col-form-label">{{ entry_name }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control"/>
                      </div>
                </div>
                
            	<div class="row mb-3">
	                <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
	                <div class="col-sm-10">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="status" value="0"/>
	                    <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
	                  </div>
	                </div>
	            </div>
            	<div class="row mb-3">
                <label for="input-date-start" class="col-sm-2 col-form-label">{{ entry_date_start }}</label>
                <div class="col-sm-10 col-md-4">
                  <div class="input-group">
                    <input type="text" name="date_start" value="{{ date_start }}" placeholder="{{ entry_date_start }}" id="input-date-start" class="form-control date"/>
                    <div class="input-group-text"><i class="fa-regular fa-calendar"></i></div>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-date-end" class="col-sm-2 col-form-label">{{ entry_date_end }}</label>
                <div class="col-sm-10 col-md-4">
                  <div class="input-group">
                    <input type="text" name="date_end" value="{{ date_end }}" placeholder="{{ entry_date_end }}" id="input-date-end" class="form-control date"/>
                    <div class="input-group-text"><i class="fa-regular fa-calendar"></i></div>
                  </div>
                </div>
              </div>
              
            	<div class="row mb-3">
	                <label for="input-campaign-type" class="col-sm-2 col-form-label">{{ entry_campaign_type }}</label>
	                <div class="col-sm-10">
	                  <select name="campaign_type" id="input-campaign-type" class="form-control">
	                  	{% if campaign_type == 'd' %}
	                    <option value="d" selected="selected">{{ text_discount }}</option>
	                    {% else %}
	                    <option value="d">{{ text_discount }}</option>
	                    {% endif %}
	                    
	                    {% if campaign_type == 'F' %}
	                    <option value="F" selected="selected">{{ text_free }}</option>
	                    {% else %}
	                    <option value="F">{{ text_free }}</option>
	                    {% endif %}
	                    
	                    {% if campaign_type == 'o' %}
	                    <option value="o" selected="selected">Other One Discound</option>
	                    {% else %}
	                    <option value="o">Other One Discound</option>
	                    {% endif %}
	                    {% if campaign_type == 's' %}
	                    <option value="s" selected="selected">Second One Discound</option>
	                    {% else %}
	                    <option value="s">Second One Discound</option>
	                    {% endif %}
	                    
	                    {% if campaign_type == 'c' %}
	                    <option value="c" selected="selected">Second One Free</option>
	                    {% else %}
	                    <option value="c">Second One Free</option>
	                    {% endif %}
	                    
	                  </select>
	                </div>
	            </div>
	            <div class="row mb-3 hdn d-class s-class o-class">
	                <label for="input-type" class="col-sm-2 col-form-label">{{ entry_type }}</label>
	                <div class="col-sm-10">
	                  <select name="type" id="input-type" class="form-control">
	                  	 {% if type == 'P' %}
	                    <option value="P" selected="selected">{{ text_percent }}</option>
	                    {% else %}
	                    <option value="P">{{ text_percent }}</option>
	                    {% endif %}
	                    {% if type == 'F' %}
	                    <option value="F" selected="selected">{{ text_amount }}</option>
	                    {% else %}
	                    <option value="F">{{ text_amount }}</option>
	                    {% endif %}
		              </select>
	                </div>
	            </div>
	            
	            <div class="row mb-3 required hdn d-class s-class o-class" id="rDiscount">
                      <label for="input-discount" class="col-sm-2 col-form-label">{{ entry_discount }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="discount" value="{{ discount }}" placeholder="{{ entry_discount }}" id="input-discount" class="form-control"/>
                      </div>
                </div>
	            
	            <div class="row mb-3 required " id="rTotal">
                      <label for="input-total" class="col-sm-2 col-form-label">{{ entry_total }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="total" value="{{ total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control"/>
                      </div>
                </div>
	            
	            <div class="row mb-3">
	                <label for="input-logged" class="col-sm-2 col-form-label">{{ entry_logged }}</label>
	                <div class="col-sm-10">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="logged" value="0"/>
	                    <input type="checkbox" name="logged" value="1" id="input-logged" class="form-check-input"{% if logged %} checked{% endif %}/>
	                  </div>
	                </div>
	            </div>
	            
	            <div class="row mb-3">
	                <label for="input-shipping" class="col-sm-2 col-form-label">{{ entry_shipping }}</label>
	                <div class="col-sm-10">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="shipping" value="0"/>
	                    <input type="checkbox" name="shipping" value="1" id="input-shipping" class="form-check-input"{% if shipping %} checked{% endif %}/>
	                  </div>
	                </div>
	            </div>
	            
	            <div class="row mb-3">
	                <label for="input-uses-total" class="col-sm-2 col-form-label">{{ entry_uses_total }}</label>
	                <div class="col-sm-10">
	                  <input type="text" name="uses_total" value="{{ uses_total }}" placeholder="{{ entry_uses_total }}" id="input-uses-total" class="form-control"/>
	                  <div class="form-text">{{ help_uses_total }}</div>
	                </div>
	              </div>
              
	            <div class="row mb-3 form-group free">
              	  <div class="col-sm-2"></div>
	              <div class="col-sm-5">
	              	<h4>Buyed <span class="hdn s-class">(Second one Discount)</span> <span class="hdn c-class">(Second one Free)</span></h4>
	              	<div class="form-check form-switch form-switch-sm">
	                    <input type="hidden" name="buycat" value="0"/>
	                    <input type="checkbox" name="buycat" value="1" id="input-buycat" class="form-check-input check-check"{% if buycat %} checked{% endif %}/>
	                    <label class="form-check-label" for="input-buycat">{% if buycat %} Category{% else %}product/s{% endif %}</label>
	                </div>
	                <div id="buy-cat" style="{{ buycat?'':'display:none;' }}">
	                	<input type="text" name="category" value="" placeholder="{{ entry_category }}" id="input-buy-category" data-oc-target="autocomplete-buy-category" class="form-control" autocomplete="off"/>
		                  <ul id="autocomplete-buy-category" class="dropdown-menu"></ul>
		                  <div class="form-control p-0" style="height: 150px; overflow: auto;">
		                    <table id="campaign-buy-category" class="table table-sm m-0">
		                      <tbody>
		                        {% for category_id,campaign_buy_category in campaign_buy_categories %}
		                          <tr id="campaign-category-{{ category_id }}">
		                            <td>{{ campaign_buy_category }}<input type="hidden" name="campaign_buy_category[]" value="{{ category_id }}"/></td>
		                            <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>
		                          </tr>
		                        {% endfor %}
		                      </tbody>
		                    </table>
		                  </div>
		                  <div class="form-text">{{ help_category }}</div>
	                </div>
	                <div id="buy-prod" style="{{ buycat?'display:none;':'' }}">
	                	 <input type="text" name="product" value="" placeholder="{{ entry_product }}" id="input-buy-product" data-oc-target="autocomplete-buy-product" class="form-control" autocomplete="off"/>
		                  <ul id="autocomplete-buy-product" class="dropdown-menu"></ul>
		                  <div class="form-control p-0" style="height: 150px; overflow: auto;">
		                    <table id="campaign-buy-product" class="table table-sm m-0">
		                      <tbody>
		                        {% for product_id,campaign_product in campaign_buy_products %}
		                          <tr id="campaign-buy-product-{{ product_id }}">
		                            <td>{{ campaign_product }}<input type="hidden" name="campaign_buy_product[]" value="{{ product_id }}"/></td>
		                            <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>
		                          </tr>
		                        {% endfor %}
		                      </tbody>
		                    </table>
		                  </div>
		                  <div class="form-text">{{ help_product }}</div>
	                </div>
	                  
	              </div>
	              <div class="col-sm-5 hdn o-class F-class">
	              <h4><span class="hdn F-class">Gift</span><span class="hdn o-class">Discount</span></h4>
	              	<div class="form-check form-switch form-switch-sm">
	                    <input type="hidden" name="getcat" value="0"/>
	                    <input type="checkbox" name="getcat" value="1" id="input-getcat" class="form-check-input check-check"{% if getcat %} checked{% endif %}/>
	                    <label class="form-check-label" for="input-getcat">{%if getcat %}Category{% else %}Product/s{% endif %}</label>
	                </div>
	                 <div id="buy-cat" style="{{ getcat?'':'display:none;' }}">
	                	<input type="text" name="category" value="" placeholder="{{ entry_category }}" id="input-get-category" data-oc-target="autocomplete-get-category" class="form-control" autocomplete="off"/>
		                  <ul id="autocomplete-get-category" class="dropdown-menu"></ul>
		                  <div class="form-control p-0" style="height: 150px; overflow: auto;">
		                    <table id="campaign-get-category" class="table table-sm m-0">
		                      <tbody>
		                        {% for category_id,campaign_get_category in campaign_get_categories %}
		                          <tr id="campaign-get-category-{{ category_id }}">
		                            <td>{{ campaign_get_category }}<input type="hidden" name="campaign_get_category[]" value="{{ category_id }}"/></td>
		                            <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>
		                          </tr>
		                        {% endfor %}
		                      </tbody>
		                    </table>
		                  </div>
		                  <div class="form-text">{{ help_category }}</div>
	                </div>
	                <div id="buy-prod" style="{{ getcat?'display:none;':'' }}">
	                	 <input type="text" name="product" value="" placeholder="{{ entry_product }}" id="input-get-product" data-oc-target="autocomplete-get-product" class="form-control" autocomplete="off"/>
		                  <ul id="autocomplete-get-product" class="dropdown-menu"></ul>
		                  <div class="form-control p-0" style="height: 150px; overflow: auto;">
		                    <table id="campaign-get-product" class="table table-sm m-0">
		                      <tbody>
		                        {% for product_id, campaign_get_product in campaign_get_products %}
		                          <tr id="campaign-get-product-{{ product_id }}">
		                            <td>{{ campaign_get_product }}<input type="hidden" name="campaign_get_product[]" value="{{ product_id }}"/></td>
		                            <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>
		                          </tr>
		                        {% endfor %}
		                      </tbody>
		                    </table>
		                  </div>
		                  <div class="form-text">{{ help_product }}</div>
	                </div>
	                
	              </div>
	            </div>
	            
	        
            
            </div>
            
           {% if campaign_id %}
            <div class="tab-pane" id="tab-history">
            	<div id="history"></div>
          	</div>
           {% endif %}
            
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>

<script type="text/javascript"><!--
$('#input-get-product').autocomplete({
    'source': function (request, response) {
        $.ajax({
            url: 'index.php?route=catalog/product.autocomplete&user_token={{ user_token }}&filter_name=' + encodeURIComponent(request),
            dataType: 'json',
            success: function (json) {
                response($.map(json, function (item) {
                    return {
                        label: item['name'],
                        value: item['product_id']
                    }
                }));
            }
        });
    },
    'select': function (item) {
        $('#input-get-product').val('');

        $('#campaign-get-product-' + item['value']).remove();

        html = '<tr id="campaign-product-' + item['value'] + '">';
        html += '  <td>' + item['label'] + '<input type="hidden" name="campaign_get_product[]" value="' + item['value'] + '"/></td>';
        html += '  <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>';
        html += '</tr>';

        $('#campaign-get-product tbody').append(html);
    }
});

