<script type="text/javascript"><!--
	function inCat(Elm){
		if($(Elm).prop('checked')){
	    	$(Elm).parent().parent().find('#buy-cat').show();
	    	$(Elm).parent().parent().find('#buy-prod').hide();
	    	$(Elm ).next().html('Category/es')
	    }else{ 
	    	$(Elm).parent().parent().find('#buy-cat').hide();
	    	$(Elm).parent().parent().find('#buy-prod').show();
	    	$(Elm ).next().html('Product/s')
	    }
	}
	
  $('#input-campaign-type').on('change',function(){
  	$('.hdn').hide();
  	$('.'+$(this).val()+'-class').show();
  });
  $('#input-campaign-type').change();
  
//--></script>
