<div class="row mb-3">
    <label class="col-sm-2 control-label" for="input-width">{{ entry_banner_id }}</label>
    <div class="col-sm-10">
     <select id="control-item" class="form-control">
	    {% for item in items  %}
	    	<option value="{{ item.item_id }}" {% if item.item_id==parts[1] %} selected="selected" {% endif %}>{{ item.title }}</option> 
	    {% endfor %}    
	</select>
    </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
	$(document).on('click','#updatew',function(e){
		e.preventDefault();
		$('.tab-pane.lan.active .by_col.selected ').find('.content').html($('#controls option:selected').text()+'::'+ $('#control-item  option:selected').text());
		$('.tab-pane.lan.active .by_col.selected ').data('col_content_id',$('#controls').val()+'.'+$('#control-item').val());
		
	});
});
</script>
        

      