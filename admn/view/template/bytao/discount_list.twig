<form id="form-discount" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="document">
	<div class="table-responsive">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<td class="text-center" style="width: 1px;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));" class="form-check-input"/></td>
					<td class="text-start"><a href="{{ sort_name }}"{% if sort == 'dd.name' %} class="{{ order|lower }}"{% endif %}>{{ column_name }}</a></td>
					<td class="text-end">{{ column_discount_type }}</td>
					<td class="text-end">{{ column_discount_value }}</td>
					<td class="text-end">{{ column_order_count }}</td>
					<td class="text-end"><a href="{{ sort_date_start }}"{% if sort == 'd.date_start' %} class="{{ order|lower }}"{% endif %}>{{ column_date_start }}</a></td>
					<td class="text-end"><a href="{{ sort_date_end }}"{% if sort == 'd.date_end' %} class="{{ order|lower }}"{% endif %}>{{ column_date_end }}</a></td>
					<td class="text-end">{{ column_status }}</td>
					<td class="text-end">{{ column_action }}</td>
				</tr>
			</thead>
			<tbody id="sortable">
				{% if discounts %}
					{% for discount in discounts %}
						<tr data-id="{{ discount.discount_id }}">
							<td class="text-center"><input type="checkbox" name="selected[]" value="{{ discount.discount_id }}" class="form-check-input"/></td>
							<td class="text-start">{{ discount.name }}</td>
							<td class="text-end">{{ discount.discount_type=='1'?'$':'%' }}</td>
							<td class="text-end">{{ discount.discount_value }}</td>
							<td class="text-end">{{ discount.order_count }}</td>
							<td class="text-end">{{ discount.date_start }}</td>
							<td class="text-end">{{ discount.date_end }}</td>
							<td class="text-end">{{ discount.status }}</td>
							
							<td class="text-end"><a href="{{ discount.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a></td>
						</tr>
					{% endfor %}
				{% else %}
					<tr>
						<td class="text-center" colspan="6">{{ text_no_results }}</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>
	<div class="row">
		<div class="col-sm-6 text-start">{{ pagination }}</div>
		<div class="col-sm-6 text-end">{{ results }}</div>
	</div>
</form>
