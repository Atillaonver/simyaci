<form id="form-popup" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="popup">
	<div class="table-responsive">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<td class="text-center" style="width: 1px;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));" class="form-check-input"/></td>
					<td class="text-start"></td>
					<td class="text-start"><a href="{{ sort_name }}"{% if sort == 'name' %} class="{{ order|lower }}"{% endif %}>{{ column_name }}</a></td>
					<td class="text-end"><a href="{{ sort_status }}"{% if sort == 'status' %} class="{{ order|lower }}"{% endif %}>{{ column_status }}</a></td>
					<td class="text-end">{{ column_date_start }}</td>
					<td class="text-end">{{ column_date_end }}</td>
					<td class="text-end">{{ column_action }}</td>
				</tr>
			</thead>
			<tbody>
				{% if popups %}
                {% for popup in popups %}
						<tr>
							<td class="text-center"><input type="checkbox" name="selected[]" value="{{ popup.popup_id }}" class="form-check-input"/></td>
							<td class="text-start">{% if popup.thumb %} <img src="{{ popup.thumb }}" alt=""/>{% endif %}</td>
							<td class="text-start">{{ popup.name }}</td>
							<td class="text-end">{{ popup.status }}</td>
							<td class="text-end">{{ popup.date_start }}</td>
							<td class="text-end">{{ popup.date_end }}</td>
							<td class="text-end"><a href="{{ popup.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a></td>
						</tr>
					{% endfor %}
				{% else %}
					<tr>
						<td class="text-center" colspan="6">{{ text_no_results }}</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>
	<div class="row">
		<div class="col-sm-6 text-start">{{ pagination }}</div>
		<div class="col-sm-6 text-end">{{ results }}</div>
	</div>
</form>
