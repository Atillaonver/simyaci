{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
    <div class="container-fluid">
      <div class="page-ctrl-controls" data-iwidth="" data-owidth="">
        <button type="submit" form="form-trivia" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form action="{{ save }}" method="post" data-oc-toggle="ajax" id="form-faq">
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#tab-general"  data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
            	<div class="row mb-3">
	                <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
	                <div class="col-sm-10">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="status" value="0"/>
	                    <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
	                  </div>
	                </div>
	            </div>
            	<div class="row mb-3">
	                <label for="input-name" class="col-sm-2 col-form-label">{{ entry_name }}</label>
	                <div class="col-sm-10">
	                    <input type="text" name="name" value="{{ name }}" id="input-name" class="form-control"/>
	                  </div>
	                </div>
	            </div>
	            
            	<div class="row mb-3">
	                <label for="input-image" class="col-sm-2 col-form-label">{{ entry_image }}</label>
	                
	                <div class="col-sm-2">
	                  <span>{{ text_image }}</span>	
	                  <div class="card image">
	                    <img src="{{ thumb }}" alt="" title="" id="thumb-image" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="image" value="{{ image }}" id="input-image"/>
	                    <div class="card-body">
	                      <button type="button" data-oc-toggle="image" data-oc-target="input-image" data-oc-thumb="#thumb-image" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
	                      <button type="button" data-oc-toggle="clear" data-oc-target="input-image" data-oc-thumb="#thumb-image" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
	                    </div>
	                  </div>
                	</div>
                	
                	<div class="col-sm-2">
                		<span>{{ text_trivia }}</span>	
	                  <div class="card image">
	                    <img src="{{ thumb }}" alt="" title="" id="thumb-trivia" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="trivia" value="{{ trivia }}" id="input-trivia"/>
	                    <div class="card-body">
	                      <button type="button" data-oc-toggle="image" data-oc-target="input-trivia" data-oc-thumb="#thumb-trivia" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
	                      <button type="button" data-oc-toggle="clear" data-oc-target="input-trivia" data-oc-thumb="#thumb-trivia" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
	                    </div>
	                  </div>
                	</div>
                	
                	<div class="col-sm-2">
                		<span>{{ text_logo }}</span>	
	                  <div class="card image">
	                    <img src="{{ thumb }}" alt="" title="" id="thumb-logo" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="logo" value="{{ logo }}" id="input-logo"/>
	                    <div class="card-body">
	                      <button type="button" data-oc-toggle="image" data-oc-target="input-logo" data-oc-thumb="#thumb-logo" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
	                      <button type="button" data-oc-toggle="clear" data-oc-target="input-logo" data-oc-thumb="#thumb-logo" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
	                    </div>
	                  </div>
                	</div>
                	
                	<div class="col-sm-3">
                		<span>{{ text_sponsor }}</span>	
	                  <div class="card image">
	                    <img src="{{ thumb }}" alt="" title="" id="thumb-sponsor" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="sponsor" value="{{ sponsor }}" id="input-sponsor"/>
	                    <div class="card-body">
	                      <button type="button" data-oc-toggle="image" data-oc-target="input-sponsor" data-oc-thumb="#thumb-sponsor" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
	                      <button type="button" data-oc-toggle="clear" data-oc-target="input-sponsor" data-oc-thumb="#thumb-sponsor" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
	                    </div>
	                  </div>
                	</div>
                	
	            </div>
	            <div class="row mb-3">
	                <label for="input-maxq" class="col-sm-2 col-form-label">{{ entry_maxq }}</label>
	                <div class="col-sm-10">
	                    <input type="text" name="maxq" value="{{ maxq }}" id="input-maxq" class="form-control"/>
	                </div>
	            </div>
	            
	            <div class="row mb-3">
	                <label for="input-time" class="col-sm-2 col-form-label">{{ entry_time }}</label>
	                <div class="col-sm-10">
	                    <input type="text" name="time" value="{{ time }}" id="input-time" class="form-control"/>
	                  </div>
	            </div>
	            <div class="row mb-3">
	                <label for="input-trivia_session" class="col-sm-2 col-form-label">{{ entry_trivia_session }}</label>
	                <div class="col-sm-10">
	                    <input type="text" name="trivia_session" value="{{ trivia_session }}" id="input-trivia_session" class="form-control"/>
	                  </div>
	            </div>
	            <div class="row mb-3">
	                <label for="input-board" class="col-sm-2 col-form-label">{{ entry_status_Board }}</label>
	                <div class="col-sm-10">
	                    <input type="text" name="board" value="{{ board }}" id="input-board" class="form-control"/>
	                  </div>
	            </div>
          </div>
          <input type="hidden" name="trivia_id" value="{{ trivia_id }}" id="input-trivia-id"/>
        </form>
      </div>
    </div>
  </div>
</div>  
