{{ header }}{{ column_left }}
<div id="content">
	
  <div class="page-header">
    <div class="container-fluid">
      <div class="ctrl-controls" data-iwidth="" data-owidth="">
        <button type="submit" form="form-firm" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}"  title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
        <span class="ctrl-control-seperator"></span>
        <button id="tool-image" data-oc-toggle="image" class="btn btn-light"><i class="fa-solid fa-images"></i></button>
        
    </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
    <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form id="form-firm" action="{{ save }}" method="post" >
          <input type="hidden" name="firm_id" value="{{ firm_id }}" id="firmId"/>
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
            {% if ADM == '1' %}	
            <li class="nav-item"><a href="#tab-data" data-bs-toggle="tab" class="nav-link">{{ tab_data }}</a></li>
            {% endif %}	
          </ul>
          
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
	            <div class="row mb-3">
	                <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
	                <div class="col-sm-1">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="status" value="0"/>
	                    <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
	                  </div>
	                </div>
	            
	                <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
	                <div class="col-sm-1">
	                  <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
	                </div>
	            
                	<label class="col-sm-2 col-form-label">{{ entry_bottom }}</label>
	                <div class="col-sm-3">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="bottom" value="0"/>
	                    <input type="checkbox" name="bottom" value="1" id="input-bottom" class="form-check-input"{% if bottom %} checked{% endif %}/>
	                  </div>
	                  <div class="bottom-position {% if not bottom %} hidden{% endif %}">
	                    	<select id="bottom-position" >
	                    		<option value="1" {% if bottom == 1 %} selected="selected"{% endif %}>1</option>
	                    		<option value="2" {% if bottom == 2 %} selected="selected"{% endif %}>2</option>
	                    		<option value="3" {% if bottom == 3 %} selected="selected"{% endif %}>3</option>
	                    		<option value="4" {% if bottom == 4 %} selected="selected"{% endif %}>4</option>
	                    	</select>
	                  </div>
	                  
	                </div>
              </div>
            
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li class="nav-item"><a href="#language-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link{% if loop.first %} active{% endif %}"><img src="{{ language.image|lower }}" title="{{ language.name }}"/> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">
              	{% for language in languages %}
                <div class="tab-pane lan {% if loop.first %} active{% endif %}" id="language-{{ language.language_id }}" lid="{{ language.language_id }}">
                	
                	<div class="mb-3 form-floating offset-sm-2">
                		<input type="text" name="firm_description[{{ language.language_id }}][title]" value="{{ firm_description[language.language_id] ? firm_description[language.language_id].title }}" placeholder="{{ entry_title }}" id="input-title-{{ language.language_id }}" class="form-control"/>
                    	<label for="input-title-{{ language.language_id }}" class="">{{ entry_title }}</label>
                        <div id="error-title-{{ language.language_id }}" class="invalid-feedback"></div>
                      </div>
                    
                	
                	<div class="row mb-3 required">
                      <label class="col-sm-2 col-form-label">{{ entry_description }}</label>
                      <div class="col-sm-10">
                       {% for languageid , editor in editors %}
                    	{% if languageid == language.language_id %}
                       		{{ editor | html_entity_decode }}
                    	{% endif %}    
                    {% endfor %}    
                       <div id="hidden-form" class="hidden"></div>
                      </div>
                    </div>
                    <div class="row mb-3">
										<label class="col-sm-2 col-form-label">SEO</label>
										<div class="col-sm-10">
											<ul class="nav nav-tabs" id="meta">
												<li class="nav-item">
													<a href="#tab-meta-title-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link required">{{ entry_meta_title }}<i class="{{ firm_description[language.language_id].meta_title ? 'fa-solid': 'fa-regular' }} fa-circle"></i></a>
												</li>
												<li class="nav-item">
													<a href="#tab-meta-description-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link">{{ entry_meta_description }}<i class="{{ firm_description[language.language_id].meta_description ? 'fa-solid': 'fa-regular' }} fa-circle"></i></a>
												</li>
												<li class="nav-item">
													<a href="#tab-meta-keyword-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link">{{ entry_meta_keyword }}<i class="{{ firm_description[language.language_id].meta_keyword ? 'fa-solid': 'fa-regular' }} fa-circle"></i></a>
												</li>
												<li class="nav-item">
													<a href="#tab-meta-seo-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link active">
														{{ entry_seo_url }}
														<i class="{{ firm_seo_url[language.language_id] ? 'fa-solid': 'fa-regular' }} fa-circle">
														</i>
													</a>
												</li>
											</ul>
											<div class="tab-content">
												<div class="tab-pane" id="tab-meta-title-{{ language.language_id }}">
													<div class="form-floating mb-3">
														<input type="text" name="firm_description[{{ language.language_id }}][meta_title]" value="{{ firm_description[language.language_id].meta_title }}" placeholder="{{ entry_meta_title }}" id="input-meta-title-{{ language.language_id }}" class="form-control"/>
														<label for="input-meta-title-{{ language.language_id }}">{{ entry_meta_title }}</label>
														<div id="error-meta-title-{{ language.language_id }}" class="invalid-feedback">
														</div>
													</div>
												</div>
												<div class="tab-pane " id="tab-meta-description-{{ language.language_id }}">
													<div class="form-floating mb-3">
														<textarea name="firm_description[{{ language.language_id }}][meta_description]" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description-{{ language.language_id }}" class="form-control">{{ firm_description[language.language_id].meta_description }}</textarea>
														<label for="input-meta-description-{{ language.language_id }}">{{ entry_meta_description }}</label>

													</div>
												</div>
												<div class="tab-pane " id="tab-meta-keyword-{{ language.language_id }}">
													<div class="form-floating mb-3">
														<textarea name="firm_description[{{ language.language_id }}][meta_keyword]" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-meta-keyword-{{ language.language_id }}" class="form-control">{{ firm_description[language.language_id].meta_keyword }}</textarea>
														<label for="input-meta-keyword-{{ language.language_id }}">{{ entry_meta_keyword }}</label>

													</div>
												</div>
												<div class="tab-pane active" id="tab-meta-seo-{{ language.language_id }}">
													<div class="input-group mb-3">
														<div class="input-group-text">
															<img src="{{ language.image|lower }}" title="{{ language.name }}" style="margin-right:10px;"/>{{ url }}</div>
														<div class="form-floating">
															<input type="text" name="firm_seo_url[{{ language.language_id }}]" value="{{ firm_seo_url[language.language_id] }}" placeholder="{{ entry_keyword }}" id="input-keyword-{{ language.language_id }}" class="form-control input-seo-url" style="padding-left: 1px;"/>
															<label for="input-keyword-{{ language.language_id }}">
																{{ entry_keyword }}
															</label>
														</div>
														<div id="error-keyword-{{ language.language_id }}" class="invalid-feedback">
														</div>
													</div>
												</div>

											</div>
										</div>
									</div>
									
                    
                    
                </div>
                {% endfor %}
               </div>
            </div>
            {% if ADM == '1' %}	
            <div class="tab-pane" id="tab-data">
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_store }}</label>
                <div class="col-sm-10">
                  <div class="form-control" style="height: 150px; overflow: auto;">
                    {% for store in stores %}
                      <div class="form-check">
                        <input type="checkbox" name="firm_store[]" value="{{ store.store_id }}" id="input-store-{{ store.store_id }}" class="form-check-input"{% if store.store_id in firm_store %} checked{% endif %}/> <label for="input-store-{{ store.store_id }}" class="form-check-label">{{ store.name }}</label>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
  
  <script type="text/javascript"><!--
$(document).ready(function(){
		$('#input-bottom').click(function(){
			if($('#input-bottom').prop('checked')){
				if($('.bottom-position').hasClass('hidden')){
					$('.bottom-position').removeClass('hidden');
				}
			}else{
				$('.bottom-position').addClass('hidden');
			}
		});
		
		$('#bottom-position').change(function(){
			$('#input-bottom').val($(this).val())
		});
		
});

//--></script>
<!-- editor JS -->
{{ editJS|html_entity_decode }}
{{ modals|html_entity_decode  }}
</div>
{{ footer }} 
