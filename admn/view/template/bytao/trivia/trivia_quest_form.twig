{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
    <div class="container-fluid">
      <div class="page-ctrl-controls" data-iwidth="" data-owidth="">
        <button type="submit" form="form-quest" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form action="{{ save }}" method="post" data-oc-toggle="ajax" id="form-quest">
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#tab-general"  data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
            	<div class="row mb-3">
	                <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
	                <div class="col-sm-10">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="status" value="0"/>
	                    <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
	                  </div>
	                </div>
	            </div>
              	<div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_image }}</label>
                <div class="col-sm-10">
                  <div class="card image">
                    <img src="{{ thumb }}" alt="" title="" id="thumb-image" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="image" value="{{ image }}" id="input-image"/>
                    <div class="card-body">
                      <button type="button" data-oc-toggle="image" data-oc-target="input-image" data-oc-thumb="thumb-image" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
                      <button type="button" data-oc-toggle="clear" data-oc-target="input-image" data-oc-thumb="thumb-image" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
                    </div>
                  </div>
                </div>
              </div>
              	<div class="row mb-3">
	                <label for="input-counter" class="col-sm-2 col-form-label">{{ entry_time }}</label>
	                <div class="col-sm-10">
	                    <input type="text" name="counter" value="{{ counter }}" id="input-counter" class="form-control"/>
	                  </div>
	            </div>
	            <div class="row mb-3">
                	<label class="col-sm-2 col-form-label">Soru</label>
                	<div class="col-sm-10">
                		{% for language in languages %}
	            		<div class="input-group">
								<div class="input-group-text">
									<img src="{{ language.image|lower }}" title="{{ language.name }}" style="margin-right:10px;"/>
								</div>
								<div class="form-floating">
								<textarea name="quest_description[{{ language.language_id }}][quest]" placeholder="Soru" class="form-control">{{ quest_description[language.language_id ] ? quest_description[language.language_id].quest : '' }}</textarea>
								
								</div>
							
							<div id="error-keyword-{{ language.language_id }}" class="invalid-feedback">
							</div>
						</div>
						{% endfor %}
					</div>
				</div>
				
				<div class="row mb-3">
                	<label class="col-sm-2 col-form-label">Cevaplar</label>
                	<div class="col-sm-10">
                		{% for language in languages %}
	            		<div class="input-group">
								<div class="input-group-text">
									A:
								</div>
								<div class="form-floating">
								<input type="text" name="quest_description[{{ language.language_id }}][answer_a]" placeholder="Cevap" class="form-control" value="{{ quest_description[language.language_id].answer_a ? quest_description[language.language_id].answer_a : '' }}"/>
								</div>
						</div>
						<div class="input-group">
								<div class="input-group-text">
									B:
								</div>
								<div class="form-floating">
								<input type="text" name="quest_description[{{ language.language_id }}][answer_b]" placeholder="Cevap" class="form-control" value="{{ quest_description[language.language_id].answer_b ? quest_description[language.language_id].answer_b : '' }}"/>
								</div>
						</div>
						<div class="input-group">
								<div class="input-group-text">
									C:
								</div>
								<div class="form-floating">
								<input type="text" name="quest_description[{{ language.language_id }}][answer_c]" placeholder="Cevap" class="form-control" value="{{ quest_description[language.language_id].answer_c ? quest_description[language.language_id].answer_c : '' }}"/>
								</div>
						</div>
						<div class="input-group">
								<div class="input-group-text">
									D:
								</div>
								<div class="form-floating">
								<input type="text" name="quest_description[{{ language.language_id }}][answer_d]" placeholder="Cevap" class="form-control" value="{{ quest_description[language.language_id].answer_d ? quest_description[language.language_id].answer_d : '' }}"/>
								</div>
						</div>
						
						
						{% endfor %}
					</div>
				</div>
	            
	            <div class="row mb-3">
                	<label class="col-sm-2 col-form-label">Doğru Cevap</label>
                	<div class="col-sm-10">
	                  <select name="correct" class="form-control">
	                  	<option value="a" {{ correct == "a" ? ' selected="selected"' }}>A</option>
	                  	<option value="b" {{ correct == "b" ? ' selected="selected"' }}>B</option>
	                  	<option value="c" {{ correct == "c" ? ' selected="selected"' }}>C</option>
	                  	<option value="d" {{ correct == "d" ? ' selected="selected"' }}>D</option>
	                  </select>
	                </div>
              	</div>
              	
	            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Doğru Cevap {{ entry_image }}</label>
                <div class="col-sm-10">
                  <div class="card image">
                    <img src="{{ thumb_correct }}" alt="" title="" id="thumb_correct-image" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/> <input type="hidden" name="correct_image" value="{{ correct_image }}" id="input-correct_image"/>
                    <div class="card-body">
                      <button type="button" data-oc-toggle="image" data-oc-target="input-correct_image" data-oc-thumb="thumb_correct-image" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
                      <button type="button" data-oc-toggle="clear" data-oc-target="input-correct_image" data-oc-thumb="thumb_correct-image" class="btn btn-warning btn-sm btn-block"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
                    </div>
                  </div>
                </div>
              </div>
	           
            	
	        </div>
          </div>
          <input type="hidden" name="trivia_id" value="{{ trivia_id }}" id="input-trivia-id"/>
          <input type="hidden" name="quest_id" value="{{ quest_id }}" id="input-quest_id"/>
          <input type="hidden" name="sort_order" value="{{ sort_order }}" id="input-sort-order"/>
        </form>
      </div>
    </div>
  </div>
</div>  
