{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-discount" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <span id="btn-container">
        	{% if discount_id %}
        	<button type="button" id="uygula" data-bs-toggle="tooltip" title="{{ button_apply }}" class="btn btn-success"><i class="fa-solid fa-retweet"></i></button>
<button type="button" id="reset" data-bs-toggle="tooltip" title="{{ button_reset }}" class="btn btn-danger"><i class="fa-solid fa-arrow-rotate-right"></i></button>
	 		{% endif %}
        </span>
        <a href="{{ back }}" id="btn-back" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form id="form-discount" action="{{ save }}" method="post" data-oc-toggle="ajax" data-oc-target="btn-container">
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_discount }}</a></li>
            
          </ul>
          <div class="tab-content">
            <div id="tab-general" class="tab-pane active">
            	<div class="row mb-3 required">
		            <label class="col-sm-2 col-form-label" for="input-name">{{ entry_name }}</label>
		            <div class="col-sm-10">
		              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
		              <div id="error-name" class="invalid-feedback"></div>
		            </div>
		        </div>
            	<div class="row mb-3 ">
	                <label class="col-sm-2 col-form-label" for="input-discount-type">{{ entry_discount_type }}</label>
	                <div class="col-sm-10">
	                  <select name="discount_type" id="input-discount-type" class="form-control">
	                    <option value="0" {{ discount_type == '0'?'selected="selected"':'' }}>{{ text_percent }}</option>
	                    <option value="1" {{ discount_type == '1'?'selected="selected"':'' }}>{{ text_amount }}</option>
	                   	<option value="2" {{ discount_type == '2'?'selected="selected"':'' }}>Not OnSale</option>
	                  </select>
	                </div>
	            </div>
            	<div class="row mb-3">
		            <label class="col-sm-2 col-form-label" for="input-discount-value">{{ entry_discount_value }}</label>
		            <div class="col-sm-10">
		              <input type="text" name="discount_value" value="{{ discount_value }}" placeholder="{{ entry_discount_value }}" id="input-discount-value" class="form-control" />
		              
		            </div>
		        </div>
              	<div class="row mb-3">
	                <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
	                <div class="col-sm-10">
	                  <div class="form-check form-switch form-switch-lg">
	                    <input type="hidden" name="status" value="0"/>
	                    <input type="checkbox" name="status" value="1" id="input-status" class="form-check-input"{% if status %} checked{% endif %}/>
	                  </div>
	                </div>
	        	</div>
	        	<div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_date_start }}</label>
                <div class="col-sm-10 col-md-4">
                  <div class="input-group">
                    <input tpe="text" name="date_start" value="{{ date_start }}" placeholder="{{ entry_date_start }}" id="input-date-start" class="form-control date"/>
                    <div class="input-group-text"><i class="fa-regular fa-calendar"></i></div>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_date_end }}</label>
                <div class="col-sm-10 col-md-4">
                  <div class="input-group">
                    <input type="text" name="date_end" value="{{ date_end }}" placeholder="{{ entry_date_end }}" id="input-date-end" class="form-control date"/>
                    <div class="input-group-text"><i class="fa-regular fa-calendar"></i></div>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
	            <label class="col-sm-2 col-form-label" for="input-all">To</label>
	            <div class="col-sm-10">
	              <select name="toall" id="input-all" class="form-control">
	              	<option value="0" {{ toall == '0'?'selected="selected"':'' }}>Category/s</option>
	              	<option value="1" {{ toall == '1'?'selected="selected"':'' }}>All Site</option>
	              </select>
	            </div>
	          </div>
	             <div class="row mb-3 to-all">
                	<label class="col-sm-2 col-form-label">{{ entry_category }}</label>
	                <div class="col-sm-10">
	                  <input type="text" name="category" value="" placeholder="{{ entry_category }}" id="input-category" data-oc-target="autocomplete-category" class="form-control" autocomplete="off"/>
	                  <ul id="autocomplete-category" class="dropdown-menu"></ul>
	                  <div class="input-group">
	                    <div class="form-control p-0" style="height: 150px; overflow: auto;">
	                      <table id="discount-category" class="table table-sm m-0">
	                        							<tbody>
                          {% for discount_category in discount_categories %}
                            <tr id="discount-category-{{ discount_category.category_id }}">
                              <td>{{ discount_category.name }}<input type="hidden" name="discount_category[]" value="{{ discount_category.category_id }}"/></td>
                              <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>
                            </tr>
                          {% endfor %}
                        </tbody>
	                      </table>
	                    </div>
	                  </div>
	                  <div class="form-text">{{ help_category }}</div>
	                </div>
	              </div>
            	<div class="form-group text-center"></div>
            </div>
            
          </div>
          <input type="hidden" name="discount_id" value="{{ discount_id }}" id="input-download-id"/>
        </form>
      </div>
    </div>
  </div>
</div>

 <script type="text/javascript"><!--
// Category
$('#input-category').autocomplete({
    'source': function (request, response) {
        $.ajax({
            url: 'index.php?route=catalog/category.autocomplete&user_token={{ user_token }}&filter_name=' + encodeURIComponent(request),
            dataType: 'json',
            success: function (json) {
                response($.map(json, function (item) {
                    return {
                        label: item.name,
                        value: item.category_id
                    }
                }));
            }
        });
    },
    'select': function ( item) {
    	console.log(item)
        $('#discount-category-' + item.value).remove();
        html = '<tr id="discount-category-' + item.value + '">';
        html += '  <td>' + item.label + '<input type="hidden" name="discount_category[]" value="' + item.value + '"/></td>';
        html += '  <td class="text-end"><button type="button" class="btn btn-danger btn-sm"><i class="fa-solid fa-minus-circle"></i></button></td>';
        html += '</tr>';

        $('#discount-category tbody').append(html);
        $('#input-category').val('');
    }
});

$('#discount-category').on('click', '.btn', function () {
    $(this).parent().parent().remove();
});

$(document).on('click','#uygula', function(e) {
	if (confirm('are you sure?')) {
		$.ajax({
			url: 'index.php?route=bytao/discount.applly&user_token={{ user_token }}&discount_id={{ discount_id }}',
			type: 'post',		
			dataType: 'json',
			beforeSend: function() {
				$('#uygula').prop('disabled', true);
			},	
			complete: function() {
				$('#uygula').prop('disabled', false);
			},		
			success: function(json) {
				if (json['error']) {
					alert(json['error']);
				}
				
				if (json['success']) {
					alert(json['success']);
				}
			}
		});
	}
});

$(document).on('click','#reset', function(e) {
	if (confirm('are you sure?')) {
		$.ajax({
			url: 'index.php?route=bytao/discount.resetit&user_token={{ user_token }}&discount_id={{ discount_id }}',
			type: 'post',		
			dataType: 'json',
			beforeSend: function() {
				$('#reset').prop('disabled', true);
			},	
			complete: function() {
				$('#reset').prop('disabled', false);
			},		
			success: function(json) {
				if (json['error']) {
					alert(json['error']);
				}
				
				if (json['success']) {
					alert(json['success']);
				}
			}
		});
	}
});


$(document).on('change','#input-all',function(){
	if($(this).val()=='1'){
		$('.to-all').addClass('hidden')
	}else{
		$('.to-all').removeClass('hidden')
	}	
});
$('#input-all').trigger('change');

//--></script>

