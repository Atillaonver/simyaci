<div class="row" >
	<legend>
		{{ text_modules }}
	</legend>
	<fieldset>
		<div class="row mb-3">
			<label class="col-sm-2 col-form-label">
				{{ entry_module }}
			</label>
			<div class="col-sm-10">
				<select id="modules" name="modules" class="form-control input-sm">
					{% for extension in extensions %}
					<optgroup label="{{ extension.name }}">
						{% if not extension.module %}
						<option value="{{ extension.code }}" {% if moduleN==extension.code %}selected="selected"{% endif %}>
							{{ extension.name }}
						</option>
						{% else %}
						{% for module in extension.module %}
						<option value="{{ module.code }}" {% if moduleN==module.code %} selected="selected" {% endif %}>
							{{ module.name }}
						</option>
						{% endfor %}
						{% endif %}
					</optgroup>
					{% endfor %}
				</select>
			</div>
		</div>
	</fieldset>
</div>



