 html='';
 {% for path in PATHS %}
 html += '<span class="fpath {{ loop.last?"lstp":"" }}">{{ path }}</span>';
 {% endfor %}
 $('#cPth').html(html)
 $('.tooltip').remove();
 //--></script>
