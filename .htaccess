<IfModule mod_security.c>
SecFilterEngine Off
SecFilterScanPOST Off
</IfModule>

<FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css|css)$">
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

## No directory listings
<IfModule mod_autoindex.c>
  IndexIgnore *
</IfModule>


## Suppress mime type detection in browsers for unknown types and prevent FLOC
<IfModule mod_headers.c>
      Header set Referrer-Policy "no-referrer"
      Header always set X-Content-Type-Options "nosniff"
      Header always set Permissions-Policy "interest-cohort=()"
      Header set Access-Control-Allow-Origin "*"
</IfModule>

## Can be commented out if causes errors, see notes above.
Options +FollowSymlinks

## Prevent Directory listing
Options -Indexes

## Prevent Direct Access to files
<FilesMatch "(?i)((\.tpl|\.twig|\.ini|\.log|(?<!robots)\.txt))">
 Require all denied
## For apache 2.2 and older, replace "Require all denied" with these two lines :
# Order deny,allow
# Deny from all
</FilesMatch>

RewriteEngine On
RewriteCond %{HTTP_HOST} ^(www\.)?han-er\.com\.tr$ [NC]
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.han-er\.com\.tr$ [NC]
RewriteRule ^(.*)$ https://www.han-er.com.tr/$1 [L,R=301]

RewriteBase /

RewriteRule ^bytao-(.*)-(.*)-(.*).css$ cdn/css.php?val1=$1&val2=$2&val3=$3 [L]
RewriteRule ^bytao-(.*)-(.*)-(.*).js$ cdn/script.php?val1=$1&val2=$2&val3=$3 [L]
RewriteRule ^catalog.xml$ index.php?route=bytao/feed.google [L]
RewriteRule ^yandex.xml$ index.php?route=bytao/feed.yandex [L]
RewriteRule ^facebook.xml$ index.php?route=bytao/feed.facebook [L]
RewriteRule ^bytaojs.js$ index.php?route=bytao/js [L]
RewriteRule ^QR.php$ cdn/qr.php [L]

RewriteRule ^system/storage/(.*) index.php?route=error/not_found [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !.*\.(ico|gif|jpg|jpeg|png|webp|js|css|svg|pdf)
RewriteRule ^([^?]*) index.php?_route_=$1 [L,QSA]


