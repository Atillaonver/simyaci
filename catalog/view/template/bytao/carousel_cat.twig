{% if categories|length > 0 %}
<div id="CATS{{ carousel_id }}" style="background: #e6dddc;">
	{% if setting.status %}<h3 class="carouselhead">{{ carousel_title | html_entity_decode }}</h3>{% endif %}
	{% if setting.showcat %}
		<div class="tab-nav">
			<ul class="nav nav-theme carouseltab" id="producttabs{{ carousel_id }}">
				{% for category_id,category in categories %}
					<li class="item {{ loop.first?'active':'' }}"><a href="#tab-{{ carousel_id }}-{{ category_id }}" data-toggle="tab">{{ category.name }}</a></li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}
	<div class="tab-content">
		{% for category_id,category in categories %}
			<div class="tab-pane products-rows tabcarousel{{ category_id }} slide {{ loop.first?'active':'' }}" id="tab-{{ carousel_id }}-{{ category_id }}">
				<div id="carousel{{ carousel_id }}-{{ category_id }}" class="owl-carousel">
				  {% for product in category.products %}
					  <div class="item text-center">
					  	{{ product }}
					  </div>
				  {% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
</div>

