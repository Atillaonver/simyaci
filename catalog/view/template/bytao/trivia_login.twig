<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ title }}</title>
<base href="{{ base }}" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{%  if icon %}
<link href="{{ icon }}" rel="icon" />
{%  endif %}

<script src="cdn/js/trivia/jquery-1.12.4.min.js" type="text/javascript"></script>
<script src="cdn/js/trivia/trivia.js?v16" type="text/javascript"></script>
<link href="cdn/css/trivia/library/bootstrap.min.css" rel="stylesheet">
<link href="cdn/css/trivia/trivia.css?v53" rel="stylesheet">
{%  for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{%  endfor %}
{%  for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{%  endfor %}
</head>
<body clas="bytao-trivia-login">
	<div class="unloged-login-container">
		<div class="login-header centered">
		<table width="100%" height="100%">
				<tr>
					<td align="center" valign="middle"><img src="{{ HTTP_IMAGE }}{{ trivia }}" title="Hoşgeldin {{ name }}" alt="{{ name }}" /></td>
				</tr>
			</table>
		</div>
		<div class="login-container">
			<table width="100%" height="100%">
				<tr>
					<td align="center" valign="middle">
			<form method="post" action="https://www.bugunnelerizledim.com/">
				<div class="form-data">
					<input type="text" name="username" placeholder="katılımcı ismi"  value="{{ username }}"/>
				</div>
				<div class="form-data">
					<<span class="error">{{ error_isim }}</span>
					<input type="text" name="name" placeholder="isim soyisim" value="{{ name }}"/>
				</div>
				
				<div class="form-data">
					<span class="error">{{ error_email }}</span>
					<input type="email" name="email" placeholder="email" value="{{ email }}"/>
				</div>
				<div class="form-data centered">
				<input type="submit" value="BAŞLA" />
				</div>
			</form>
					</td>
				</tr>
			</table>
		</div>
		<div class="login-footer centered">
			<table width="100%" height="100%">
				<tr>
					<td align="center" valign="middle"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" /></td>
				</tr>
			</table>
		</div>
	</div>
	
</body>
</html>