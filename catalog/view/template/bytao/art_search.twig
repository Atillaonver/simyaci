{{ header }}
<div class="w3-row-padding" id="slideGrid" data-count="{{ arts|length }}" style="margin-bottom:128px;margin-top:128px;">
 <h3 class="w3-center">{{ heading_title }}</h3>
{% if description %}
<div class="w3-content" >
{{ description }}
</div>
{% endif %}
{% if thumb %}
<div class="col-sm-2"><img src="{{ thumb}}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-thumbnail" /></div>
{% endif %}

{% set type = 3 %}

{% if type == '1' %}
   	{% set colClass='w3-col' %}
{% elseif type == '2' %}
    	{% set colClass='w3-half' %}
{% elseif type == '3' %}
    	{% set colClass='w3-third' %}
{% else %}
    	{% set colClass='w3-quarter' %}
{% endif %}  
  
{% if arts %}
 <div class="w3-content" style="">
 	{% for i in 1..3 %}
    	{% if arts[i] %}
   			<div class="{{ colClass }}" id="colG{{ i }}">
   				{% for item in arts[i] %}
		       	<div class="imgcontainer" ><a href="{{ item.image }}" data-fancybox="images" data-caption="<span class=\'w3-right art-code\'>{{ item.art_code }}</span>{{ item.desc }}"><img src="{{ item.thumb }}" alt="{{ item.art_code }}" width="100%"></a></div>
		       	{% endfor %}
		    </div>
		{% endif %}
	{% endfor %}
</div> 
{% endif %}
</div> 

<div id="wait" class="w3-modal w3-black w3-display-middle">
  <i class="glyphicon glyphicon-search"></i>

</div>
{{ footer }}