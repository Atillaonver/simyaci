{% if items %}
<div class="container">
  <nav id="menu" class="navbar">
    <div class="navbar-header"><span id="category" class="visible-xs">{{ text_category }}</span>
      <button type="button" class="btn btn-navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse"><i class="fa fa-bars"></i></button>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav">
        {% for item in items %}
        	{% if item.subs %}
		        <li class="dropdown"><a href="{{ item.href }}" class="dropdown-toggle" data-toggle="dropdown">{{ item.title }}</a>
		          <div class="dropdown-menu">
		            <div class="dropdown-inner"> {% for child in item.sub|batch(item.sub|length / item.column|round(1, 'ceil')) %}
		              <ul class="list-unstyled">
		                {% for child in item.subs %}
		                <li><a href="{{ child.href  }}">{{ child.title }}</a></li>
		                {% endfor %}
		              </ul>
		              {% endfor %}</div>
		            <a href="{{ item.menu.href }}" class="see-all">{{ text_all }} {{ item.menu.title }}</a> </div>
		        </li>
        	{% else %}
        		<li><a href="{{ item.href }}">{{ item.title }}</a></li>
        	{% endif %}
        {% endfor %}
      </ul>
    </div>
  </nav>
</div>
{% endif %} 