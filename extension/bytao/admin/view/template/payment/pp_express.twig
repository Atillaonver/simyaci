							<option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
						{% else %}
							<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
						{% endif %}
					{% endfor %}
				  </select>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-2 control-label">{{ entry_completed_status }}</label>
				<div class="col-sm-10">
				  <select name="payment_pp_express_completed_status_id" class="form-control">
					{% for order_status in order_statuses %}
						{% if order_status['order_status_id'] == payment_pp_express_completed_status_id %}
							<option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
						{% else %}
							<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
						{% endif %}
					{% endfor %}
				  </select>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-2 control-label">{{ entry_denied_status }}</label>
				<div class="col-sm-10">
				  <select name="payment_pp_express_denied_status_id" class="form-control">
					{% for order_status in order_statuses  %}
						{% if order_status['order_status_id'] == payment_pp_express_denied_status_id %}
							<option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
						{% else %}
							<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
						{% endif %}
					{% endfor %}
				  </select>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-2 control-label">{{ entry_expired_status }}</label>
				<div class="col-sm-10">
				  <select name="payment_pp_express_expired_status_id" class="form-control">
					{% for order_status in order_statuses %}
